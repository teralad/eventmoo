<p id="notice"><%= notice %></p>

<h1>Events</h1>
<%= form_tag(events_path, method: :get) do %>
  <%= datetime_field_tag(:start_time, params[:start_time]||"2019-01-15T00:00") %>
  <%= datetime_field_tag(:end_time, params[:end_time]||"2019-02-15T00:00") %>
  <%= submit_tag("Search") %>
<% end %>

<br><br><br>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-body table-responsive tableFixHead">
      <table class='table table-responsive'>
        <thead class='thead-dark'>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Timings</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
          </tr>
        </thead>

        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td scope="row"><%= event.title %></td>
              <td scope="row"><%= event.timings %></td>
              <td scope="row"><%= event.description %></td>
              <td scope="row"><%= event.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
