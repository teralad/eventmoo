<h1>Users</h1>

<table class='table'>
  <thead class='thead-dark'>
    <tr>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Country</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td scope="row"><%= user.username %></td>
        <td scope="row"><%= user.email %></td>
        <td scope="row"><%= TelephoneNumber.parse(user.phone, user.country_iso).international_number %></td>
        <td scope="row"><%= user.country_iso %></td>
        <td scope="row"><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p id="notice"><%= notice %></p>
